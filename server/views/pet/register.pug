extends ../shared/layout

block main-content
	form#pet-register.form-horizontal(method="post")
		label(for="name") Pet name
		input(id="name" class="form-control" type="name" name="name" placeholder="Pet Name" value="Tobi" required)
		br
		
		label(for="weight") Weight
		input(id="weight" class="form-control" type="number" name="weight" placeholder="Weight (approximate)" value=7.5 required)
		br
		
		label(for="age") Age
		input(id="age" class="form-control" type="number" name="age" placeholder="Age" value="0.33" required)
		br
		
		label(for="sex") Sex
		input(type="hidden" id="sex" name="sex" value="male" required)
		.flex-wrapper(role='sex', aria-label='...')
			button.btn.btn-margin.pets-sex.pets-sex-active.active.flex-auto(type="button" value="male") Male
			button.btn.btn-margin.pets-sex.flex-auto(type="button" value="female") Female
		
		label(for="breed") Select breed
		.flex-wrapper(role='group', aria-label='...')
			button.btn.btn-margin.pets-species.pets-species-active.active.flex-auto(type="button" value="all" name="") all
			each breed in breeds.petsSpecies
				button.btn.btn-margin.pets-species.flex-auto(type="button" value=breed)=breed
		br
		div(style="width:80%; margin:auto;")
			select.form-control.selectpicker#breed-search(data-live-search="true",data-width="100%", data-size="10")
		input(type="hidden" id="breed" name="breed" value="" required)
		input(type="hidden" id="species" name="species" value="" required)
		br
		div.flex(style="width=100%")
			img#breed-image.img-fluid(src="" alt="breed name" style="margin:auto;")
